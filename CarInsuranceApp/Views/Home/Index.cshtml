<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h3 class="m-0">Please provide the following information</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("TotalQuote", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <label class="text-left">First Name:</label>
                    <input name="FirstName" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">Last Name:</label>
                    <input name="LastName" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">Email Address:</label>
                    <input name="EmailAddress" type="email" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">Date of Birth:</label>
                    <input name="DateofBirth" type="date" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">Car Year:</label>
                    <input name="CarYear" type="number" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">Car Make:</label>
                    <input name="CarMake" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">Car Model:</label>
                    <input name="CarModel" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">Have you ever had a DUI (true or false)?</label>
                    <input name="HadDUI" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">How many speeding tickets do you have?</label>
                    <input name="SpeedingTickets" type="number" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label class="text-left">Would you like full coverage (true or false)?</label>
                    <input name="FullCoverage" type="text" class="form-control" />
                </div>
               
                <button type="submit" class="btn btn-block btn-primary text-uppercase">Calculate  My  Quote</button>
            </div>
            }
        </div>
    </div>
</div>